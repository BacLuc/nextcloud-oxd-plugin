<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>

	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>

	<table>
		<name>*dbprefix*gluu_sso</name>
		<declaration>

			<field>
				<name>gluu_action</name>
				<type>text</type>
				<default></default>
				<length>1000</length>
			</field>
            <field>
                <name>gluu_value</name>
                <type>text</type>
                <default></default>
                <length>1000</length>
            </field>
            <index>
                <name>gluu_action</name>
                <unique>true</unique>
                <field>
                    <name>gluu_action</name>
                    <sorting>ascending</sorting>
                </field>
            </index>
		</declaration>

	</table>

</database>